<mvc:View controllerName="com.saperp.m.manageproducts.controller.Product"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form"
    xmlns:uxap="sap.uxap">
    <uxap:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader id="_IDGenObjectPageHeader" objectTitle="{ path: 'ID', formatter: '.formatter.formatTitle'}"/>
        </uxap:headerTitle>

        <uxap:sections>
            <uxap:ObjectPageSection id="_IDGenObjectPageSection" showTitle="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection1" title="Product Details">
                        <uxap:blocks>
                            <core:Fragment id="_IDGenFragment1" fragmentName="com.saperp.m.manageproducts.view.fragment.ProductInfos" type="XML" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>

                    <uxap:ObjectPageSubSection id="_IDGenObjectPageSubSection2" title="Supplier Details">
                        <uxap:blocks>
                            <core:Fragment id="_IDGenFragment" fragmentName="com.saperp.m.manageproducts.view.fragment.SupplierInfos" type="XML" />                            
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>

                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>