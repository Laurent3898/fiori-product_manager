<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form">

    <layout:SimpleForm id="productForm" editable="false" layout="ResponsiveGridLayout">
        <Label id="_IDGenLabel1" text="ID" />
        <Text id="_IDGenText11" text="{ID}" />
        <Label id="_IDGenLabel2" text="Name" />
        <Text id="_IDGenText12" text="{Name}" />
        <Label id="_IDGenLabel3" text="Description" />
        <Text id="_IDGenText13" text="{Description}" />
        <Label id="_IDGenLabel4" text="Price" />
        <ObjectNumber id="_IDGenObjectNumber" number="{Price}" unit="â‚¬" />
        <Label id="_IDGenLabel6" text="{i18n>Rating}" />
        <ObjectStatus id="_IDGenObjectStatus1" 
                        text="{path: 'Rating', formatter: '.formatter.formatRatingText'}" 
                        state="{path: 'Rating', formatter: '.formatter.formatRatingState'}" />
        <Label id="_IDGenLabel7" text="{i18n>ReleaseDate}" />
        <Text id="_IDGenText15" text="{path: 'ReleaseDate', formatter: '.formatter.formatReleaseDate'}" />
        <Label id="_IDGenLabel8" text="{i18n>Category}" />
        <Text id="_IDGenText16" text="{Category/Name}" />
    </layout:SimpleForm>

</core:FragmentDefinition>